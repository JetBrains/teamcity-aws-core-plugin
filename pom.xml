<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jetbrains.teamcity.plugins</groupId>
    <artifactId>aws-core-plugin</artifactId>
    <version>${revision}</version>
    <packaging>pom</packaging>

    <properties>
        <revision>${PluginVersion}</revision>
        <PluginVersion>${teamcity.version}</PluginVersion>
        <teamcity.version>${MAJOR_VERSION}-SNAPSHOT</teamcity.version>
        <MAJOR_VERSION>2024.11</MAJOR_VERSION>
        <local.repo.path>${TC_LOCAL_REPO}</local.repo.path>
        <TC_LOCAL_REPO>local-repo</TC_LOCAL_REPO>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
    </properties>

    <url>https://github.com/JetBrains/teamcity-aws-core-plugin</url>
    <organization>
        <name>JetBrains</name>
        <url>https://www.jetbrains.com</url>
    </organization>

    <modules>
        <module>aws-core-agent</module>
        <module>aws-core-server</module>
        <module>aws-core-common</module>
        <module>aws-core-webapp</module>
    </modules>

    <repositories>
        <repository>
            <id>local-teamcity-artifacts</id>
            <url>file://${local.repo.path}</url>
        </repository>
        <repository>
            <id>central</id>
            <url>https://repo1.maven.org/maven2/</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>teamcity-space</id>
            <url>https://packages.jetbrains.team/maven/p/tc/maven</url>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <repository>
            <id>teamcity-space</id>
            <url>https://packages.jetbrains.team/maven/p/tc/maven</url>
        </repository>
    </distributionManagement>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.jetbrains.teamcity.plugins</groupId>
                <artifactId>aws-core-server</artifactId>
                <version>${revision}</version>
            </dependency>
            <dependency>
                <groupId>org.jetbrains.teamcity.plugins</groupId>
                <artifactId>aws-core-agent</artifactId>
                <version>${revision}</version>
            </dependency>
            <dependency>
                <groupId>org.jetbrains.teamcity.plugins</groupId>
                <artifactId>aws-core-common</artifactId>
                <version>${revision}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ftp</artifactId>
                <version>3.5.3</version>
            </extension>
        </extensions>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <inherited>false</inherited>
                <version>2.4.0</version>
                <configuration>
                    <thirdPartyFilename>third-party-libraries.json</thirdPartyFilename>
                    <fileTemplate>${maven.multiModuleProjectDirectory}/license-third-party.ftl</fileTemplate>
                    <excludedGroups>tc-sbt-runner.*|com.jetbrains.teamcity.*|org.jetbrains.teamcity.*|org.jetbrains.kotlin.*|org.jetbrains.kotlinx.*|org.jetbrains.intellij.*|com.jetbrains.intellij.*|jetbrains.ring.*</excludedGroups>
                    <excludedArtifacts>jcip-annotations</excludedArtifacts>
                    <force>true</force>
                    <includedScopes>compile,runtime</includedScopes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>javac-release-flag-compat</id>
            <activation>
                <jdk>[9,)</jdk>
            </activation>
            <properties>
                <maven.compiler.release>8</maven.compiler.release>
            </properties>
        </profile>
        <profile>
            <id>dont-deploy-war</id>
            <activation>
                <property>
                    <name>packaging</name>
                    <value>war</value>
                </property>
            </activation>
            <properties>
                <maven.deploy.skip>true</maven.deploy.skip>
            </properties>
        </profile>
    </profiles>
</project>
